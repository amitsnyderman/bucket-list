<!DOCTYPE html>
<html>
<head>
  <title>Buckets</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<header>
	<h1><%= link_to "Buckets", root_path %></h1>
	<navigation>
		<%= link_to 'New Item', new_item_path %>
		<%= link_to 'New Action', new_action_path %>
	</navigation>
	
	<% if current_user %>
		<div class="authn">Logged in as <%= current_user.phone_number %> (<%= link_to "logout", destroy_user_session_path %>)</div>
	<% end %>
</header>

<section id="messaging">
	<% if notice %><p class="notice"><%= notice %></p><% end %>
	<% if alert %><p class="alert"><%= alert %></p><% end %>
</section>

<section id="content">
	<%= yield %>
</section>

</body>
</html>
